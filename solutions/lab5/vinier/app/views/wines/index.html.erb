<h1>Listing wines</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Vintage</th>
    <th>Acquired on</th>
    <th>Winery</th>
    <th>Appellation</th>
    <th>Color</th>
    <th>Years to maturity</th>
    <th>Quantity</th>
    <th>Rating</th>
    <th>Notes</th>
    <th>Country</th>
    <th>Code saq</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @wines.each do |wine| %>
  <tr>
    <td><%= wine.name %></td>
    <td><%= wine.vintage %></td>
    <td><%= wine.acquired_on %></td>
    <td><%= wine.winery %></td>
    <td><%= wine.appellation %></td>
    <td><%= wine.color %></td>
    <td><%= wine.years_to_maturity %></td>
    <td><%= wine.quantity %></td>
    <td><%= wine.rating %></td>
    <td><%= wine.notes %></td>
    <td><%= wine.country %></td>
    <td><%= wine.code_saq %></td>
    <td><%= link_to 'Show', wine %></td>
    <td><%= link_to 'Edit', edit_wine_path(wine) %></td>
    <td><%= link_to 'Destroy', wine, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

